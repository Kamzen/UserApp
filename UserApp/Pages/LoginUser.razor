@page "/login"

<div class="p-3 w-50 m-auto card d-flex align-items-center justify-content-center">
    <div class="h4 mb-3 text-center fw-bolder">Login User</div>

    <form class="p-3 w-75 m-auto">
        <div class="mb-3">
            <label class="form-label">Email/UserName</label>
            <input type="text" @bind="EmailUsername" class="form-control" placeholder="Email/Username">
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" @bind="Password" class="form-control" placeholder="Password">
        </div>
        <div class="mb-3 text-center">
            <button type="button"  class="btn btn-secondary w-50">Login</button>
        </div>
    </form>

</div>

@code {
    public string? EmailUsername;
    public string? Password;

   

}
