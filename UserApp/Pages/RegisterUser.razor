@page "/register"

<div class="p-3 w-50 m-auto card d-flex align-items-center justify-content-center">
    <div class="h4 mb-3 text-center fw-bolder">Register User</div>

    <form class="p-3 w-75 m-auto">
        <div class="mb-1">
            <label class="form-label">Fist Name</label>
            <input type="text" @bind="FirstName" class="form-control" placeholder="First Name">
        </div>  
        <div class="mb-1">
            <label class="form-label">Last Name</label>
            <input type="text" @bind="LastName" class="form-control" placeholder="Last Name">
        </div>
        <div class="mb-1">
            <label class="form-label">User Name</label>
            <input type="text" @bind="UserName" class="form-control" placeholder="User Name">
        </div>
        <div class="mb-1">
            <label class="form-label">Email</label>
            <input type="text" @bind="Email" class="form-control" placeholder="Email">
        </div>
        <div class="mb-1">
            <label class="form-label">Password</label>
            <input type="password" @bind="Password" class="form-control" placeholder="Password">
        </div>
        <div class="mb-3">
            <label class="form-label">Date Of Birth</label>
            <input type="date" @bind="DateOfBirth" class="form-control" placeholder="Date Of Birth">
        </div>
        <div class="mb-2 text-center">
            <button type="button" class="btn btn-secondary w-50">Register</button>
        </div>
    </form>

</div>

@code {
    public string? EmailUsername;
    public string? Password;
    public string? FirstName;
    public string? LastName;
    public string? UserName;
    public string? Email;
    public DateTime? DateOfBirth;

}